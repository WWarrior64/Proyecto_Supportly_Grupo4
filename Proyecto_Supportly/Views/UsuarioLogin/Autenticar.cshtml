@{
    Layout = "_LayoutInicio";
    ViewData["Title"] = "Login";
}

<style>

    .login-wrapper {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        /* Flexbox para centrar */
        display: flex;
        justify-content: center;
        align-items: center;
        /* fondo ligero */
        background: linear-gradient(135deg, #e0e7fa, #c5d6fa);
        z-index: 1; /* Que quede sobre cualquier contenedor del Layout */
    }

    .login-container {
        background: #fff;
        padding: 40px 30px;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        width: 400px;
        text-align: left;
        z-index: 2;
    }

    h1 {
        color: #6200ea;
        margin-bottom: 25px;
        text-align: center;
        font-size: 28px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #333;
        font-size: 1.1em;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        transition: border-color 0.3s, box-shadow 0.3s;
        background-color: #f8f8f8;
    }

        .form-control:focus {
            border-color: #6200ea;
            outline: none;
            box-shadow: 0 0 0 3px rgba(98, 0, 234, 0.2);
        }

    .btn-custom {
        background: #6200ea;
        color: #fff;
        border: none;
        padding: 14px;
        width: 100%;
        border-radius: 8px;
        cursor: pointer;
        font-size: 18px;
        font-weight: bold;
        transition: background 0.3s;
        margin-top: 25px;
    }

        .btn-custom:hover {
            background: #3700b3;
        }

    .text-danger {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 4px;
        display: block;
    }

    .register-link {
        text-align: center;
        margin-top: 20px;
        font-size: 15px;
        color: #555;
    }

        .register-link a {
            color: #6200ea;
            text-decoration: none;
            font-weight: bold;
        }

            .register-link a:hover {
                text-decoration: underline;
            }

    header, footer {
        display: none !important;
    }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <h1>Inicio de Sesión</h1>
        @using (Html.BeginForm("Autenticar", "UsuarioLogin", FormMethod.Post))
        {
            <div class="form-group">
                <label for="txtemail">Correo electrónico:</label>
                @Html.TextBox("txtemail", null, new { @class = "form-control", placeholder = "ejemplo@correo.com", required = "required", type = "email" })
                @Html.ValidationMessage("txtemail", "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="txtpassword">Contraseña:</label>
                @Html.Password("txtpassword", null, new { @class = "form-control", placeholder = "********", required = "required" })
                @Html.ValidationMessage("txtpassword", "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn-custom">Iniciar Sesión</button>
        }
        <p class="register-link">
            ¿No tienes una cuenta?
            @Html.ActionLink("Regístrate", "Index", "RegistroUsuarioExterno")
        </p>
    </div>
</div>
